<div id="wrapper">
    <div id="searchContainer">
        <h1>People Search</h1>
        <input v-model="searchText" v-on:keyup.enter="delayedLoad()" />
        <button v-on:click="delayedClick()">SEARCH</button>
        <div id="loadingIcon" v-show="loading">
            <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
        </div>
    </div>
    <div id="noSearchResults" v-show="!loading && personsDisplay.length === 0">
        No search result found
    </div>
    <div id="tableContainer" v-show="!loading && personsDisplay.length > 0">
        
        <table id="table1" >
            <tr>
                <th>LAST NAME</th>
                <th>FIRST NAME</th>
                <th>ADDRESS</th>
                <th>AGE</th>
                <th>INTERESTS</th>
                <th>PIC</th>
            </tr>
            <tr id="tableItems" v-for="(person, index) in personsDisplay">
                <td>
                    {{person.LastName}}
                </td>
                <td>
                    {{person.FirstName}}
                </td>
                <td>
                    {{person.Address}}
                </td>
                <td>
                    {{person.Age}}
                </td>
                <td>
                    {{person.Interests}}
                </td>
                <td>
                    <img :src="getPic(person)" v-bind:alt="pic" class="pic"/>
                </td>

            </tr>

        </table>
    </div>
</div>


<script src="~/Scripts/vue.js"></script>
<script src="~/Scripts/app.js"></script>
